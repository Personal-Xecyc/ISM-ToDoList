@model IEnumerable<ToDoList_ISM.Models.TodoList>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Add new ToDo item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!item.IsDone)
                    {
                        @item.Content
                    }
                    else
                    {
                        <div class="CompletedToDo">@item.Content</div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDone, new { id = item.iD })
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.iD">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.iD">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>